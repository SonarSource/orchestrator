<?xml version="1.0" encoding="UTF-8"?>

<!-- to be moved to travis-utils -->

<settings xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd"
          xmlns="http://maven.apache.org/SETTINGS/1.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <profiles>
    <profile>
      <id>repox</id>
      <repositories>
        <repository>
          <id>repox</id>
          <name>sonarsource</name>
          <url>https://repox.sonarsource.com/sonarsource</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>repox</id>
          <name>sonarsource</name>
          <url>https://repox.sonarsource.com/sonarsource</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>
  <activeProfiles>
    <activeProfile>repox</activeProfile>
  </activeProfiles>
</settings>
